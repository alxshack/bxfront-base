//размер шрифта, высота строки

font-rem($size, $base-font-size = 16)
	font-size ($size / $base-font-size) * 1rem

line($line-height = 24, $font-size = 16)
	line-height ($line-height / $font-size)

//тень
/*shadow($value = $box-shadow )
	box-shadow $value*/

background($imgpath, $position= 0% 0%, $repeat= no-repeat)
	background url('../assets/images' + $imgpath) $position $repeat

//радиус

radius($val)
	border-radius $val
	
//заголовки
h1-title($color = $text-color, $position = center)
	font-rem(32)
	line(38,32)
	color $color
	text-align $position

	+breakpoint-md()
		font-rem(46)
		line(60,46)

h2-title($color = $text-color, $position = left)
	color $color
	text-align $position
	font-rem(28)
	line(38,28)

	+breakpoint-md()
		font-rem(46)
		line(56,46)

h3-title($color = $text-color, $position = left)
	color $color
	text-align $position
	font-rem(22)
	line(30,22)

	+breakpoint-md()
		font-rem(35)
		line(45,35)

h3-like-title()
	font-rem(28)
	line(38,28)

	+breakpoint-md()
		font-rem(30)
		line(38,30)


h4-title($color = $text-color, $position = left)
	text-align $position
	color $color
	font-rem(24) /*@Todo:временно, так как не нашла значения в макетах*/
	line(32,24) /*@Todo:временно, так как не нашла значения в макетах*/

	+breakpoint-md()
		font-rem(24)
		line(32,24)

//ссылки и кнопки
btn-style($color = $white, $bg = $color-highlighted, $radius = 5px, $bold = 700)
	radius($radius)
	font-rem(15)
	line(24,15)
	font-weight $bold
	text-transform uppercase
	letter-spacing 0.54px
	color $color
	background-color $bg
	display inline-block
	text-align center
	padding 18px 27px
	cursor pointer

	+breakpoint-md()
		font-rem(18)
		line(24,18)

//сетка
make-row()
	display flex
	flex-wrap wrap
	margin-right ($gutter / -2)
	margin-left ($gutter / -2)

make-col-ready()
	position relative
	width 100%
	padding-right ($gutter / 2)
	padding-left ($gutter / 2)

make-col($size)
	flex 0 0 percentage($size / $columns)
	max-width percentage($size / $columns)

container($max-width = 996px)
	max-width $max-width
	width 100%
	padding-right 20px
	padding-left 20px
	margin-right auto
	margin-left auto
	cleartop()

	+breakpoint-md()
		padding-right 15px
		padding-left 15px

flex-block()
	display flex
	flex-wrap wrap

padding--x($top, $bottom)
	padding-top $top
	padding-bottom $bottom

centered-absolute-x()
	left 50%
	transform translateX(-50%)