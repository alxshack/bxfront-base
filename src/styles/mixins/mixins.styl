// Media query миксины
// Кастомные медиа запросы

breakpoint(screen-size)
	@media (min-width: screen-size)
		{block}

breakpoint-up-to(screen-size)
	@media (max-width: screen-size)
		{block}

breakpoint-range(min-screen-size, max-screen-size)
	@media (min-width: min-screen-size) and (max-width: max-screen-size)
		{block}

// Медиа запросы с заранее определенными контрольными точками
breakpoint-sm()
	@media (min-width: $screen-sm)
		{block}

breakpoint-up-to-sm()
	@media (max-width: $screen-sm - 1)
		{block}

breakpoint-md()
	@media (min-width: $screen-md)
		{block}

breakpoint-up-to-md()
	@media (max-width: $screen-md - 1)
		{block}

breakpoint-lg()
	@media (min-width: $screen-lg)
		{block}

breakpoint-up-to-lg()
	@media (max-width: $screen-lg - 1)
		{block}

breakpoint-xl()
	@media (min-width: $screen-xl)
		{block}

breakpoint-up-to-xl()
	@media (max-width: $screen-xl - 1)
		{block}


// Миксины хелперы
text-hide()
	font 0/0 a
	color transparent
	text-shadow none


cleartop()
	&:before
		content ''
		display table
		clear both


visually-hidden()
	position absolute !important
	width 1px
	height 1px
	overflow hidden
	clip rect(1px, 1px, 1px, 1px)

inline-block()
	display inline-block
	vertical-align middle

pseudo($position, $width, $height)
	content ''
	position $position
	display inline-block
	size($width, $height)

