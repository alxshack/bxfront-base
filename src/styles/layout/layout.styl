.container
	container()

//flex layout

.row
	&-md
		+breakpoint-md()
			make-row()

	&-lg
		+breakpoint-lg()
			make-row()

	&-column-reverse
		+breakpoint-up-to-md()
			display flex
			flex-direction column-reverse

.col
	&-md
		+breakpoint-md()
			make-col-ready()

		&--1-2
			+breakpoint-md()
				make-col(6)

		&--1-3
			+breakpoint-md()
				make-col(4)

		&--3-5
			+breakpoint-md()
				make-col-ready()
				make-col(7)

		&--2-5
			+breakpoint-md()
				make-col-ready()
				make-col(5)

		&--2-3
			+breakpoint-md()
				make-col-ready()
				make-col(8)

	&-lg
		+breakpoint-lg()
			make-col-ready()

		&--1-2
			+breakpoint-lg()
				make-col(6)

		&--2-5
			+breakpoint-lg()
				make-col(5)

		&--3-5
			+breakpoint-lg()
				make-col-ready()
				make-col(7)