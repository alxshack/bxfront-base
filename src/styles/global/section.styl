.section
	padding-top 25px
	padding-bottom 25px

	+breakpoint-md()
		padding-top 60px
		padding-bottom 60px

	&--light-yellow
		background-color $light-bg

	&--bordered
		border-top 1px solid $border-color

		+breakpoint-md()
			border none
			padding-top 0
			margin-top 30px

		.container
			position relative

			+breakpoint-md()
				padding-top 90px

				&::before
					content ''
					position absolute
					top 0
					width calc('100% -  30px')
					height 1px
					background-color $border-color

	&__no-text
		+breakpoint-lg()
			margin-top 11px

	&__text
		&.col-md
			margin-bottom 20px

			+breakpoint-md()
				margin-bottom 0