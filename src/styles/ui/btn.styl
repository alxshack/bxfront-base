.btn-style
	radius(5px)
	font-rem(15)
	line(24,15)
	padding 15px 20px
	border none
	font-weight 700
	text-transform uppercase
	letter-spacing 0.54px
	color $white
	background-color $color-highlighted
	display inline-block
	text-align center
	cursor pointer

	+breakpoint-md()
		font-rem(18)
		line(24,18)
		padding 18px 27px

.btn
	@extend .btn-style

	&--600
		font-weight 600

.btn-green
	@extend .btn-style
	background-color $color-highlighted--secondary

.btn-orange
	@extend .btn-style
	background-color #EBAF3E

.btn-linear
	@extend .btn-style
	background-image linear-gradient(89.53deg, #A5C438 -0.04%, #E7A331 100.04%), #E99D1C


.btn-light
	@extend .btn-style
	radius(7px)
	font-weight 600
	color $text-color
	background-color transparent
	border 2px solid $gray--lightest

.btn-bordered
	@extend .btn-style
	font-rem(16)
	line(22,16)
	radius(7px)
	background-color transparent
	color $color-highlighted
	border 2px solid $color-highlighted
	font-weight 600
	text-transform none
	padding 9px 26px
	letter-spacing normal

	+breakpoint-md()
		font-rem(16)
		line(22,16)

.btn-wrapper
	text-align center
	margin-top 30px

	+breakpoint-lg()
		margin-top 50px