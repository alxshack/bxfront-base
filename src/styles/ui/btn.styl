.btn
	btn-style()

	&--600
		font-weight 600 !important

.btn-green
	btn-style($white, $color-highlighted--secondary, 5px, 700)

.btn-bordered
	btn-style($color-highlighted, transparent, 7px, 600, 2px solid, $color-highlighted)
	font-rem(16)
	line(22,16)
	text-transform none
	padding 9px 26px
	letter-spacing normal

	+breakpoint-md()
		font-rem(16)
		line(22,16)

.btn-wrapper
	text-align center
	margin-top 30px

	+breakpoint-lg()
		margin-top 50px