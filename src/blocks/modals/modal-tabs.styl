.modal-tabs
	radius(10px)
	color $text-color

	&__content
		display none
		
		&.is-active
			display block

	&__list
		display flex
		margin 0

	&__item
		width 50%
		text-align center

	&__link
		@extend .bold
		font-rem(18)
		line(25,20)
		border-radius 10px 10px 0 0
		display flex
		align-items center
		justify-content center
		height 100%
		background-color #F8F2F0
		color $color-highlighted
		padding 20px 10px
		border-bottom 3px solid  transparent
		box-shadow -5px 15px 30px rgba(0, 0, 0, 0.1)


		+breakpoint(370px)
			font-rem(20)

		&.is-active
			border-bottom 3px solid  $color-highlighted
			box-shadow none
			color $text-color
			background-color $white

		+breakpoint-md()
			font-rem(25)
			line(32,25)
			padding-top 33px
			padding-bottom 33px
			border-width 9px

			&.is-active
				border-width 9px

	&__row
		+breakpoint-md()
			display flex
			flex-wrap wrap
			margin-left -30px
			margin-right -30px

	&__col
		+breakpoint-up-to-md()
			&:not(:last-child)
				margin-bottom 20px

		+breakpoint-md()
			width 50%
			padding-left 30px
			padding-right 30px
			display flex
			flex-direction column

	&__remark
		color $text-color--secondary
		margin-top 20px

		+breakpoint-md()
			padding-bottom 5px
			margin-top auto

	&__content
		border-radius 0 0 10px 10px
		background-image linear-gradient(12.02deg, #FFF1C6 0%, #FFD7CC 100%), #C4C4C4
		padding 25px

		+breakpoint-md()
			padding 52px 60px 53px 60px

	&__checked-list
		margin-bottom 20px

		+breakpoint-md()
			margin-bottom 15px

	.form
		+breakpoint-md()
			padding-top 5px