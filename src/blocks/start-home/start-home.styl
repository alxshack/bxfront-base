.start-home
	padding-top 45px
	padding-bottom 25px
	text-align center
	color $white
	background-image linear-gradient(89.92deg, #4AAF26 -0.04%, #9ABE09 100.04%), #FFFBF0

	+breakpoint-lg()
		padding-top 80px
		padding-bottom 60px

	&__subtitle
		margin-bottom 20px

		+breakpoint-lg()
			margin-bottom 0

	&__remark
		@extend .hide-up-to-lg
		margin-top 10px
		margin-bottom 10px

	&__img-wrapper

		+breakpoint-lg()
			margin-left -30px
			margin-right -30px

	&__btn
		margin-bottom 30px
		+breakpoint-up-to-md()
			width 100%
			margin-bottom 0
