.logo
	size(136px, 90px)
	radius(5px)
	@extend .centered
	background-color $white
	border 1px solid $border-color

.logos-slider
	&__slide
		outline none
		margin-right 10px

		+breakpoint-lg()
			margin-right 0
			padding-left 15px
			padding-right 15px

	.slick
		&-list
			margin-right -20px

			+breakpoint-lg()
				margin-left -15px
				margin-right -15px

		&-arrow
			position absolute
			top 50%
			margin-top -16px
			z-index 1

		&-prev
			left -16px
			transform rotate(-180deg)

		&-next
			right -16px


