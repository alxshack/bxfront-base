.inner-menu
	background-color $light-bg
	position fixed
	top 0
	right -100%
	opacity 0
	transition all 0.3s
	padding 40px 20px 54px 20px
	bottom 0
	width 100%
	z-index -1

	+breakpoint-up-to-lg()
		left 0

	+breakpoint-lg()
		width 36vw
		padding 54px 64px 60px 60px

	&--open
		opacity 1
		right 0
		z-index 9999
		overflow-y scroll

	&__list
		margin-bottom 34px

		+breakpoint-lg()
			margin-bottom 40px

		&-item
			&:not(:last-child)
				margin-bottom 20px

		&-link
			font-rem(20)
			line(27,20)
			font-weight 600

.page-overlay
	display none
	
	&.is-open-menu
		display block
		position fixed
		top 0
		bottom 0
		right 0
		left 0
		background-color rgba(34, 44, 72, 0.5)

